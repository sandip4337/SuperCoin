<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.CoinActivty">


    <com.google.android.material.button.MaterialButton

        android:id="@+id/share"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="@color/white"
        android:onClick="Share"
        app:icon="@drawable/ic_baseline_share_24"
        app:iconGravity="start"
        app:iconSize="35dp"
        app:cornerRadius="100dp"
        app:iconTint="#CEEC1616"
        tools:ignore="OnClick,RtlHardcoded,UsingOnClickInXml"
        tools:targetApi="lollipop" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/homecards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:backgroundTint="#00BCD4"
        app:cardCornerRadius="25dp"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/coinName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/cabin_sketch"
                    android:textColor="#EBFFFFFF"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:text="Bitcoin" />

                <TextView
                    android:id="@+id/coinDivider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/cabin_sketch"
                    android:textColor="#EBFFFFFF"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:text="|"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/coinSymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/cabin_sketch"
                    android:text="btc"
                    android:textColor="#EBFFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold" />





            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_gravity="center">


                <TextView
                    android:id="@+id/priceUsdText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:textSize="22sp"
                    android:fontFamily="@font/cabin_sketch"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:text="$8988498.8752"
                    android:layout_marginStart="3dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_gravity="center">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/oneHourText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_sketch"
                    android:layout_marginLeft="5dp"
                    android:textColor="#EBFFFFFF"
                    android:text="1h:"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp" />

                <TextView
                    android:id="@+id/percentChange1hText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25%"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/cabin_sketch"
                    android:textColor="#EBFFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp" />



                <TextView
                    android:id="@+id/twentyFourHoursText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:text="24h:"
                    android:fontFamily="@font/cabin_sketch"
                    android:textColor="#EBFFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginRight="1dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginLeft="25dp" />

                <TextView
                    android:id="@+id/percentChange24hText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_sketch"
                    android:textColor="#EBFFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="55%"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/daysText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:fontFamily="@font/cabin_sketch"
                    android:textColor="#EBFFFFFF"
                    android:text="7d:"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginEnd="3dp" />

                <TextView
                    android:id="@+id/percentChange7day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cabin_sketch"
                    android:textColor="#EBFFFFFF"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="785.78%" />

            </LinearLayout>


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>